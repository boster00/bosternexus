{
  "name": "bosternexus",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose -f infra/compose/docker-compose.yml up",
    "dev:down": "docker-compose -f infra/compose/docker-compose.yml down",
    "build": "npm run build --workspaces --if-present",
    "start": "docker-compose -f infra/compose/docker-compose.yml up -d",
    "web:dev": "npm run dev --workspace=apps/web",
    "api:dev": "npm run start:dev --workspace=apps/api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}

